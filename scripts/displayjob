#!/bin/sh

#title                    :displayjobs.sh
#description              :This script is for displaying crontab jobs
#author		          :Markus Meresma (40439107)
#date                     :2020.10.05
#version                  :0.1
#Made for		  :CSN08116 2020, coursework
#contributors(1)          :Gabriel Saliev (40441590)
#contributors(2)          :Dávid Gábor Uzonyi(40429825)

#Save crontab -l output in a variable
file=$(crontab -l)

while read -r line
do

	echo $line
#	grep -v "#" $line

done < "$file"

#make this function in separate script
read -p "Type 'exit' to return to menu: " input

case $input in

	"exit")
		clear
		source `pwd`"/menu" 
		;;
	*)
		exit 0
		;;
	esac






