#Select job to edit
#Save job parameters to a variable
#Ask user which parameters he wants to edit
#Create new string with the edited parameters
#Search and overwrite the cronjob in the crontab file

file=$(crontab -l)

while true;
do
    #display jobs
    #source `pwd`"/displayjob"
    
    #if cronjob !exist break;;
    echo "Enter a job to edit: "
    read job_str

    job_exist=grep job_str $file
    if [ $job_exist == false ]
    then
	break;;
    fi
    
done

source `pwd`"/exit"    
    
